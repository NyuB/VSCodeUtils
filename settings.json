{
    "workbench.colorTheme": "Default Light Modern",
    "workbench.colorCustomizations": {
        "editor.background": "#e7ddc8",
        "terminal.background": "#e7ddc8",
        "[Default Light Modern]": {
            "activityBar.activeBackground": "#e7ddc8",
            "tab.activeBackground": "#e7ddc8",
            "activityBar.foreground":"#da6b03",

            "sideBar.background":"#e7ddc817",

            "activityBar.background": "#e4e0d9",
            "activityBar.inactiveForeground": "#774210fa",
            "tab.inactiveBackground": "#e4e0d9",
        }
    },
    "files.watcherExclude": {
        // Scala
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "files.autoSave": "afterDelay",
    "files.eol": "\n",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "files.exclude": {
        "**/.git": false
    },
    "zig.path": "zig",
    "files.associations": {
        "*.pl": "prolog"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "'ADD HERE','Cascadia Code', Consolas, 'Courier New', monospace",
    "zig.zls.enabled": "on",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "makefile.configureOnOpen": false,
    "chat.commandCenter.enabled": false,
}
